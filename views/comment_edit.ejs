<% title = 'Modifier commentaire'; %>
<section class="card">
  <h1>Modifier votre commentaire</h1>
  <form method="post" action="/wiki/<%= pageSlug %>/comments/<%= comment.snowflake_id %>/edit" class="comment-form">
    <%- include('partials/csrf_field') %>
    <input type="hidden" name="parentId" value="<%= comment.parent_snowflake_id || '' %>">
    <div class="field">
      <label for="comment-author">Nom ou pseudo</label>
      <input id="comment-author" type="text" name="author" maxlength="80" value="<%= comment.author || '' %>">
    </div>
    <div class="field">
      <label for="comment-body">Message</label>
      <textarea id="comment-body" name="body" rows="6" maxlength="2000" required><%= comment.body || '' %></textarea>
    </div>
    <div class="actions">
      <button class="btn success" data-icon="💾" type="submit">Enregistrer</button>
      <a class="btn secondary" data-icon="↩️" href="/wiki/<%= pageSlug %>#comments">Annuler</a>
    </div>
  </form>
  <form method="post" action="/wiki/<%= pageSlug %>/comments/<%= comment.snowflake_id %>/delete" onsubmit="return confirm('Supprimer ce commentaire ? Cette action est définitive.');">
    <%- include('partials/csrf_field') %>
    <button class="btn danger" data-icon="🗑️" type="submit">Supprimer ce commentaire</button>
  </form>
</section>
