<% title = t('home.title'); %>

<section class="home-hero">
  <div class="hero-intro">
    <p class="hero-eyebrow"><%= t('home.hero.welcome', { wiki: (typeof wikiName !== 'undefined' ? wikiName : 'Wiki') }) %></p>
    <h1 class="hero-title"><%= t('home.hero.title') %></h1>
    <p class="hero-lede"><%= t('home.hero.lede') %></p>
    <div class="hero-actions">
      <a class="btn success" data-icon="✨" href="/search"><%= t('home.hero.browse') %></a>
      <a class="btn secondary" data-icon="✍️" href="/new"><%= t('home.hero.propose') %></a>
    </div>
  </div>
  <dl class="hero-stats" aria-label="<%= t('home.stats.aria') %>">
    <div class="hero-stat">
      <dt><%= t('home.stats.published') %></dt>
      <dd><strong><%= total %></strong></dd>
      <small><%= t('home.stats.publishedHint') %></small>
    </div>
    <div class="hero-stat">
      <dt><%= t('home.stats.shown') %></dt>
      <dd><strong><%= rows.length %></strong></dd>
      <small><%= t('home.stats.shownHint') %></small>
    </div>
  </dl>
</section>

<section class="home-section">
  <div class="section-heading">
    <div class="section-heading-text">
      <h2><%= t('home.section.all') %></h2>
      <p><%= t('home.section.allHint') %></p>
    </div>
    <% const perPageFieldId = `${pagination.pageParam}-per-page`; %>
    <form class="page-size" method="get" action="/">
      <input type="hidden" name="<%= pagination.pageParam %>" value="1">
      <% if (pagination.preservedQuery && pagination.preservedQuery.length) { %>
        <% pagination.preservedQuery.forEach(pair => { %>
          <input type="hidden" name="<%= pair.name %>" value="<%= pair.value %>">
        <% }) %>
      <% } %>
      <label for="<%= perPageFieldId %>"><%= t('home.section.perPage') %></label>
      <select id="<%= perPageFieldId %>" name="<%= pagination.perPageParam %>" onchange="this.form.submit()">
        <% pagination.perPageOptions.forEach(option => { %>
          <option value="<%= option %>" <%= option === pagination.perPage ? 'selected' : '' %>><%= option %></option>
        <% }) %>
      </select>
    </form>
  </div>
  <div class="article-grid">
    <% rows.forEach(p => {
      const tags = (p.tagsCsv||'').split(',').filter(Boolean);
      const createdDate = new Date(p.created_at);
      const createdIso = !Number.isNaN(createdDate.valueOf()) ? createdDate.toISOString() : null;
    %>
      <article class="card article-card">
        <header class="card-header">
          <h3 class="card-title"><strong><%= p.title %></strong></h3>
          <time class="card-meta" <%= createdIso ? `datetime=\"${createdIso}\"` : '' %>><%= t('home.card.published') %> <%= p.created_at %></time>
        </header>
        <% if (p.excerpt) { %>
          <div class="excerpt">
            <div class="excerpt-body"><%- p.excerpt %></div>
          </div>
        <% } %>
        <% if (tags.length) { %>
          <div class="tags-row">
            <% tags.forEach(t => { %><a class="tag" href="/tags/<%= t %>"><%= t %></a><% }) %>
          </div>
        <% } %>
        <div class="page-stats" aria-label="<%= t('home.card.statsAria') %>">
          <span title="<%= t('home.card.likes') %>">💖 <strong data-like-count-for="<%= p.slug_id %>"><%= p.likes %></strong></span>
          <span title="<%= t('home.card.comments') %>">💬 <strong><%= p.comment_count %></strong></span>
          <span title="<%= t('home.card.views') %>">👁️ <strong><%= p.views %></strong></span>
        </div>
        <footer class="card-footer">
          <div class="card-actions">
            <a class="btn success" data-icon="📖" href="/wiki/<%= p.slug_id %>"><%= t('common.openArticle') %></a>
            <form action="/wiki/<%= p.slug_id %>/like" method="post" data-like-form-for="<%= p.slug_id %>">
              <%- include('partials/csrf_field') %>
              <button
                class="btn <%= p.userLiked ? 'unlike' : 'like' %>"
                data-icon="<%= p.userLiked ? '💔' : '💖' %>"
                data-label-liked="<%= t('home.card.unlike') %>"
                data-label-unliked="<%= t('home.card.like') %>"
                type="submit"
              >
                <%= p.userLiked ? t('home.card.unlike') : t('home.card.like') %> (<%= p.likes %>)
              </button>
            </form>
            <button
              class="btn copy"
              data-icon="🔗"
              type="button"
              onclick="navigator.clipboard.writeText(location.origin + '/wiki/<%= p.slug_id %>')"
            >
              <%= t('common.copyLink') %>
            </button>
          </div>
        </footer>
      </article>
    <% }) %>
  </div>
</section>

<div class="actions pagination">
  <span class="pagination-status">
    <%- t('common.pageXofY', { page: pagination.page, total: pagination.totalPages }) %>
  </span>
  <div class="pager">
    <% if (pagination.hasPrevious) { %>
      <a class="btn" data-icon="⬅️" href="<%= pagination.previousUrl %>"><%= t('common.prev') %></a>
    <% } else { %>
      <span class="btn" data-icon="⬅️" aria-disabled="true"><%= t('common.prev') %></span>
    <% } %>
    <% if (pagination.hasNext) { %>
      <a class="btn" data-icon="➡️" href="<%= pagination.nextUrl %>"><%= t('common.next') %></a>
    <% } else { %>
      <span class="btn" data-icon="➡️" aria-disabled="true"><%= t('common.next') %></span>
    <% } %>
  </div>
</div>
