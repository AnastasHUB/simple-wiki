    <button class="btn copy" data-icon="ðŸ”—" onclick="navigator.clipboard.writeText(location.origin + '/wiki/<%= page.slug_id %>')">Copier le lien</button>
    <% const currentUser = typeof user !== 'undefined' && user ? user : null; %>
    <% if (currentUser && currentUser.is_admin) { %>
      <a class="btn" data-icon="âœï¸" href="/edit/<%= page.slug_id %>">Ã‰diter</a>
      <a class="btn" data-icon="ðŸ“œ" href="/wiki/<%= page.slug_id %>/history">Historique</a>
