<h1><%= t('admin.pages.heading') %></h1>

<section class="card">
  <h2><%= t('admin.pages.stats.title') %></h2>
  <p>
    <%- t('admin.pages.stats.count', { count: fmt.number(stats.count) }) %>
    <% if (stats.latest) { %>
      <%- t('admin.pages.stats.latest', { title: stats.latest.title, slug: stats.latest.slug_id, date: fmt.dateTime(stats.latest.ts) }) %>
    <% } %>
  </p>
  <p class="mb-0"><%= t('admin.pages.stats.hint') %></p>
</section>

